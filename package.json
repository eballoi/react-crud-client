{
  "name": "react-crud-client",
  "version": "1.0.0-beta.3",
  "publishConfig": {
    "access": "public"
  },

  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },

  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom",
    "dev": "tsc --watch"
  },

  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  
  "dependencies": {
    "@tanstack/react-query": "^5.90.10"
  },
  
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.3",
    "tsup": "^8.5.1",
    "@types/react": "^19.2.6"
  },

  "license": "MIT"
}
